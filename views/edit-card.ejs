<!DOCTYPE html>
<html lang="en">
  <%- include ('./head_toes/header') %>
  <body>
    <div class="container">
      <div class="row">
        <div col-lg-12 col-md-12 col-sm-12>
          <h1 style="text-align: center;">Edit <%=bizIdea.title %></h1>
          <div style="width: 30%; margin: 25px auto;">
            <form action="/details-page/<%=bizIdea._id %>" method="POST">
              <div class="form-group">
                <label for="title">Title</label>
                <input
                  class="form-control"
                  type="text"
                  name="title"
                  value="<%= bizIdea.title %>"
                />
              </div>
              <div class="form-group">
                <label for="image_url"
                  >New Image (Leave empty if not updating)</label
                >
                <input type="url" id="image" name="image_url" />
              </div>
              <div class="form-group">
                <label for="description">Description</label>
                <textarea
                  class="form-control"
                  type="text"
                  name="description"
                  rows="9"
                  value="<%= bizIdea.description%>"
                >
                </textarea>
              </div>
              <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
              </div>
            </form>
            <a
              href="/details-page/<%=bizIdea._id %>"
              class="btn btn-xs btn-warning"
              >Go Back</a
            >
          </div>
        </div>
      </div>
    </div>
    <%- include ('./head_toes/footer') %>
  </body>
</html>

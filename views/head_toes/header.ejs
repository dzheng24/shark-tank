<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Shark Tank</title>
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="/stylesheets/main.css" />
  <link href="https://fonts.googleapis.com/css2?family=Sora:wght@300&display=swap" rel="stylesheet">
</head>
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="navbar">
  <div class="navbar-header">
  <a class="navbar-brand" href="/display-page">SharkTank</a>
</div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <form id="search-bar" class="form-inline my-2 my-lg-0" action="/display-page" method="GET">
      <input
        class="form-control mr-sm-2"
        type="search"
        name="search"
        placeholder="Search for Million dollar Ideas"
      />
      <input class="btn btn-outline-secondary my-2 my-sm-0" type="submit" value="SEARCH">
        Search
    </input>
    </form>
    <ul class="navbar-nav mr-auto">
      <% if(!currentUser){ %>
      <li id="navButton"><a href="/login">Login</a></li>
      <li id="navButton"><a href="/register">Sign Up</a></li>
      <% } else { %>
      <li id="navButton">
        <a href="/users/<%=currentUser.id %>"
          id="navButton" >Hello! <%= currentUser.username %></a
        >
      </li id="navButton">
      <li><a href="/logout" id="navButton">Logout</a></li>
      <% } %>
    </ul>

  </div>
</nav>
<div class="container" id="message_box">
  <% if(error && error.length > 0) { %>
    <div class="alert alert-danger"><p><%=error %></p></div>
  <% } %>
  
  <% if(success && success.length > 0) { %>
    <div class="alert alert-success"><p><%= success %></p></div>
  <% } %>
</div>
